<div class="w-full mx-auto md:w-2/3">
  <h1 class="text-4xl font-bold">Editing todo</h1>
  <div class="min-w-full mt-1 overflow-hidden border rounded-lg">
    <%= turbo_frame_tag @todo, class: "flex items-center py-3 bg-white border-b gap-x-4 todo"  do %>
      <%= turbo_stream_from @todo %>
      <%= render "form", todo: @todo %>
      <%= link_to "Back", @todo, class: "mr-10 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <% end %>
  </div>
  <%= link_to "Back to todos", todos_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
